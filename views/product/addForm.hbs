            function validateData(){
                const name = document.getElementById("name");
                const price = document.getElementById("price");
                const picture = document.getElementById("picture");
                const quantity = document.getElementById("quantity");
                name.addEventListener('invalid', function (event) {
                if (event.target.validity.valueMissing) {
                    event.target.setCustomValidity('Please tell us how we should address you.');
                }
                })
                name.addEventListener('change', function (event) {
                event.target.setCustomValidity('');
                })
                if(name.length < 5){
                    document.getElementById("notice").innerHTML = "Not enough length for name"
                }else if (price<10 || price >1000){
